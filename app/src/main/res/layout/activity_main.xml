<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_do_bajo"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/holo_red_light"
            android:onClick="nota_do_bajo"
            android:text="DO_" />

        <Button
            android:id="@+id/button_re"
            android:layout_width="380dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/holo_orange_light"
            android:onClick="nota_re"
            android:text="RE" />

        <Button
            android:id="@+id/button_mi"
            android:layout_width="360dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:onClick="nota_mi"
            android:text="MI" />

        <Button
            android:id="@+id/button_fa"
            android:layout_width="340dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/holo_green_light"
            android:onClick="nota_fa"
            android:text="FA" />

        <Button
            android:id="@+id/button_sol"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/holo_blue_bright"
            android:onClick="nota_sol"
            android:text="SOL" />

        <Button
            android:id="@+id/button_la"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/holo_purple"
            android:onClick="nota_la"
            android:text="LA" />

        <Button
            android:id="@+id/button_si"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:onClick="nota_si"
            android:text="SI" />

        <Button
            android:id="@+id/button_do_alto"
            android:layout_width="260dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/holo_red_dark"
            android:onClick="nota_do_alto"
            android:text="DO^" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>